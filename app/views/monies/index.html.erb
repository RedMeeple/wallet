
<p id="notice"><%= notice %></p>

<h1 id="links">Your Transactions</h1>

<button class="btn"> <%= link_to 'New Transaction', new_mony_path %> </button>

<table>
  <thead>
    <tr>
      <th>Other party</th>
      <th>Amount</th>
      <th>Transaction Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @monies.each do |mony| %>
      <tr>
        <td><%= mony.other_party %></td>
        <td><%= mony.amount %></td>
        <td><%= mony.date_of_transaction %></td>
        <td><%= link_to 'Show', mony %></td>
        <td><%= link_to 'Edit', edit_mony_path(mony) %></td>
        <td><%= link_to 'Destroy', mony, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
